<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<!--	扫描实体类	-->
		<property name="typeAliasesPackage" value="
			com.udfex.framework.mybatis.model,
			com.udfex.test.mybatis.model
			" />
		<!--	mybatis-config文件路径	-->
		<property name="configLocation" value="classpath:config/mybatis-config.xml" />
		<!--	扫描mapper.xml文件	-->
		<property name="mapperLocations" value="classpath*:com/udfex/**/mapper/**/*.xml" />
	</bean>

	<bean id="sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate" destroy-method="clearCache">
		<constructor-arg index="0" ref="sqlSessionFactory" />
	</bean>
	<bean id="mybatisDao" class="com.udfex.framework.mybatis.dao.impl.MybatisDaoImpl">
		<property name="sqlSessionTemplate" ref="sqlSessionTemplate" />
	</bean>

	<!--	mapper接口类扫描配置	-->
	<bean id="mapperScannerConfigurer" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<!--	扫描基础包路径（多基础包路径用;分隔）	-->
		<property name="basePackage" value="
			com.udfex.framework.mybatis.mapper;
			com.udfex.test.mybatis.mapper" />
		<property name="markerInterface" value="com.udfex.framework.mybatis.mapper.MybatisMapper" />
		<property name="sqlSessionTemplateBeanName" value="sqlSessionTemplate"/>
	</bean>

</beans>